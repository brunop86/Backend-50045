<h1>My Profile</h1>

<div class="profile-card">
  <p>Welcome, {{user.nombre}} {{user.apellido}}!</p>
  <p>Role: {{user.role}}</p>

  <form action="/api/users/logout" method="POST">
    <a class="btnMios" type="submit" href="/login">Logout</a>
  </form>

  {{#if this.isAdmin}}
    <a class="btnMios" href="/realtimeproducts">Edit Products</a>
  {{else}}
    <a class="btnMios" href="/chat">Live Chat</a>
    <a class="btnMios" href="/products">Store</a>
  {{/if}}
</div>

<style>
  h1 { text-align: center; margin-top: 10rem; } .profile-card { max-width:
  400px; margin: 0 auto; padding: 20px; background-color: #f2f2f2;
  border-radius: 5px; text-align: center; } .profile-card p { margin-bottom:
  10px; } .profile-card .btnMios { display: block; margin: 20px auto; padding:
  10px 20px; background-color: #244ced; color: #fff; border: none;
  border-radius: 5px; font-size: 16px; cursor: pointer; } .profile-card
  .btnMios:hover { background-color: grey; } .profile-card a { display: block;
  margin-bottom: 10px; color:#244ced; text-decoration: none; font-weight: bold;
  }
</style>