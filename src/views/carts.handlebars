<h1>Shopping Cart</h1>

<div class="container">
  {{#each products}}
    <div class="card mb-3">
      <div class="card-body">
        <p class="card-text">Product: {{this.product.title}}</p>
        <p class="card-text">Quantity: {{this.quantity}}</p>
        <p class="card-text">Price: ${{this.product.totalPrice}}</p>
        <button
          onclick="deleteProduct('{{this.cartId}}', '{{this.product._id}}')"
          class="btn btn-danger"
        >Delete</button>
      </div>
    </div>
  {{/each}}
</div>

<button onclick="emptyCart('{{cartId}}')" class="btn btn-danger">Empty Cart</button>
<h3 class="mt-2">Total ${{totalCompra}}</h3>

<script>
    function deleteProduct(cartId, productId) {
        fetch(`/api/carts/${cartId}/product/${productId}`, {
            method: 'DELETE'
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Deleting Product Error');
                }
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

    function emptyCart(cartId) {
        fetch(`/api/carts/${cartId}`, {
            method: 'DELETE'
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Empty Cart Error');
                }
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
</script>